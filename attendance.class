void attendance::getdat()
{
	
	ifstream f0("database.dat",ios::binary);
	attendance ob;
	while(!f0.eof())
		f0.read((char*)&ob,sizeof(ob));
	if(ob.srno==0)
		srno++;
	else
		srno=ob.srno+1;
	f0.close();
	cin.ignore();
	printf("Enter name of Member\n");
	cin.getline(name,sizeof(name));
	printf("Enter attendance (if present earlier/required)\n");
	cin>>att;
	x=ob.srno;
	cin.ignore();
}

